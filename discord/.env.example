# Discord Bot Integration for CX Agent Studio
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS - DISCORD
# =============================================================================

# Discord Bot Token
# Get this from: Discord Developer Portal > Your App > Bot > Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord Application/Client ID
# Get this from: Discord Developer Portal > Your App > General Information > Application ID
DISCORD_CLIENT_ID=your_application_id_here

# =============================================================================
# REQUIRED SETTINGS - GOOGLE CLOUD / CX AGENT STUDIO
# =============================================================================

# Google Cloud Project ID
# From deployment ID: projects/PROJECT_ID/locations/REGION_ID/apps/APPLICATION_ID/deployments/DEPLOYMENT_ID
GCP_PROJECT_ID=discord-bot-8fdf5

# CX Agent Studio Region (e.g., us, eu)
GCP_REGION=us

# CX Agent Studio Application ID
CES_APP_ID=804e6e6c-115e-4da2-bbae-373d79929398

# CX Agent Studio Deployment ID
CES_DEPLOYMENT_ID=d3f12f5f-5fe1-4413-9d92-0c009b03db9c

# =============================================================================
# OPTIONAL SETTINGS - DISCORD
# =============================================================================

# Discord Guild ID for guild-specific command deployment
# If set, commands will be deployed to this guild only (instant)
# If not set, commands will be deployed globally (takes up to 1 hour)
# DISCORD_GUILD_ID=your_guild_id

# =============================================================================
# OPTIONAL SETTINGS - AUTHENTICATION
# =============================================================================

# Path to Google Cloud service account key file
# Required for production deployments
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# OPTIONAL SETTINGS - BOT BEHAVIOR
# =============================================================================

# Only respond when the bot is @mentioned in channels
# Default: false (responds to all messages)
# RESPOND_TO_MENTIONS_ONLY=false

# Use bidirectional streaming (BidiRunSession) instead of runSession
# Default: false
# USE_BIDI_SESSION=false

# =============================================================================
# OPTIONAL SETTINGS - VOICE CHANNELS
# =============================================================================

# Enable voice channel support
# Default: true
# VOICE_ENABLED=true

# Auto-join voice channels when a user joins
# Default: false
# VOICE_AUTO_JOIN=false

# Auto-leave voice channels when the bot is alone
# Default: true
# VOICE_AUTO_LEAVE=true

# Delay before auto-leaving (in milliseconds)
# Default: 30000 (30 seconds)
# VOICE_AUTO_LEAVE_DELAY=30000

# =============================================================================
# OPTIONAL SETTINGS - SERVER
# =============================================================================

# Logging level (debug, info, warn, error)
# Default: info
# LOG_LEVEL=info

# Health check endpoint port
# Default: 8080
# HEALTH_CHECK_PORT=8080
