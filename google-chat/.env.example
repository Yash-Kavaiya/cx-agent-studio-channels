# Google Chat Integration for CX Agent Studio
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS - GOOGLE CLOUD
# =============================================================================

# Google Cloud Project ID
# This should be the same project where your Chat app is configured
GCP_PROJECT_ID=your_project_id

# CX Agent Studio Region (e.g., us, eu)
GCP_REGION=us

# CX Agent Studio Application ID
CES_APP_ID=your_app_id

# =============================================================================
# OPTIONAL SETTINGS - CX AGENT STUDIO
# =============================================================================

# CX Agent Studio Deployment ID (optional)
# CES_DEPLOYMENT_ID=your_deployment_id

# Path to Google Cloud service account key file
# Not required on Cloud Run/Functions with proper IAM configuration
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Use bidirectional streaming (BidiRunSession) instead of runSession
# Default: false
# USE_BIDI_SESSION=false

# =============================================================================
# OPTIONAL SETTINGS - PUB/SUB
# =============================================================================

# Use Pub/Sub instead of HTTP endpoint for receiving events
# Default: false
# USE_PUBSUB=false

# Pub/Sub subscription name (required if USE_PUBSUB=true)
# Format: projects/PROJECT_ID/subscriptions/SUBSCRIPTION_NAME
# PUBSUB_SUBSCRIPTION=projects/your-project/subscriptions/chat-bot-sub

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server port
# Default: 3000
# PORT=3000

# Logging level (debug, info, warn, error)
# Default: info
# LOG_LEVEL=info
