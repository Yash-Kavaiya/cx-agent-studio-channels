# Slack Bot Integration for CX Agent Studio
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS - SLACK
# =============================================================================

# Slack Bot User OAuth Token (starts with xoxb-)
# Get this from: Slack App > OAuth & Permissions > Bot User OAuth Token
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Slack App-Level Token for Socket Mode (starts with xapp-)
# Get this from: Slack App > Basic Information > App-Level Tokens
# Required only if USE_SOCKET_MODE=true
SLACK_APP_TOKEN=xapp-your-app-token-here

# Slack Signing Secret
# Get this from: Slack App > Basic Information > App Credentials > Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret-here

# =============================================================================
# REQUIRED SETTINGS - GOOGLE CLOUD
# =============================================================================

# Google Cloud Project ID
GCP_PROJECT_ID=your_project_id

# CX Agent Studio Region (e.g., us, eu)
GCP_REGION=us

# CX Agent Studio Application ID
CES_APP_ID=your_app_id

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# CX Agent Studio Deployment ID (optional, for specific deployment)
# CES_DEPLOYMENT_ID=your_deployment_id

# Path to Google Cloud service account key file
# Required for production deployments
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Use Socket Mode (WebSocket) instead of Events API
# Default: true (recommended for development)
# USE_SOCKET_MODE=true

# Only respond when the bot is @mentioned in channels
# Default: false (responds to all messages in channels where it's a member)
# RESPOND_TO_MENTIONS_ONLY=false

# Use bidirectional streaming (BidiRunSession) instead of runSession
# Default: false
# USE_BIDI_SESSION=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
# LOG_LEVEL=INFO

# Health check endpoint port
# Default: 8080
# HEALTH_CHECK_PORT=8080
