# Telegram Bot Integration for CX Agent Studio
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Cloud Project ID
GCP_PROJECT_ID=your_project_id

# CX Agent Studio Region (e.g., us, eu)
GCP_REGION=us

# CX Agent Studio Application ID
CES_APP_ID=your_app_id

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# CX Agent Studio Deployment ID (optional, for specific deployment)
# CES_DEPLOYMENT_ID=your_deployment_id

# Path to Google Cloud service account key file
# Required for production deployments
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Use bidirectional streaming (BidiRunSession) instead of runSession
# Default: false
# USE_BIDI_SESSION=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
# LOG_LEVEL=INFO

# Health check endpoint port
# Default: 8080
# HEALTH_CHECK_PORT=8080
