# WhatsApp/Meta Configuration
# Get these from Meta App Dashboard > WhatsApp > API Setup
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_waba_id_here
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token_here
WHATSAPP_API_VERSION=v18.0

# Google Cloud Configuration
GCP_PROJECT_ID=your_project_id
GCP_REGION=us

# CX Agent Studio Configuration
# Get these from CX Agent Studio > Deploy > API Access
CES_APP_ID=your_app_id
CES_DEPLOYMENT_ID=your_deployment_id

# Path to service account key file (not needed on Cloud Run with proper IAM)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Bot Behavior
# Set to 'true' to use bidirectional streaming instead of synchronous calls
USE_BIDI_SESSION=false

# Server Configuration
PORT=3000
LOG_LEVEL=info
