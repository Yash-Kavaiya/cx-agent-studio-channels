# Zoom Integration for CX Agent Studio
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS - ZOOM
# =============================================================================

# Zoom OAuth Client ID
# Get from: Zoom Marketplace > Your App > App Credentials
ZOOM_CLIENT_ID=your_client_id_here

# Zoom OAuth Client Secret
# Get from: Zoom Marketplace > Your App > App Credentials
ZOOM_CLIENT_SECRET=your_client_secret_here

# Zoom Webhook Verification Token
# Get from: Zoom Marketplace > Your App > Feature > Event Subscriptions
ZOOM_VERIFICATION_TOKEN=your_verification_token_here

# =============================================================================
# REQUIRED SETTINGS - GOOGLE CLOUD
# =============================================================================

# Google Cloud Project ID
GCP_PROJECT_ID=your_project_id

# CX Agent Studio Region (e.g., us, eu)
GCP_REGION=us

# CX Agent Studio Application ID
CES_APP_ID=your_app_id

# =============================================================================
# OPTIONAL SETTINGS - ZOOM
# =============================================================================

# Zoom Account ID (for Server-to-Server OAuth)
# Get from: Zoom Marketplace > Your App > App Credentials
# ZOOM_ACCOUNT_ID=your_account_id

# Zoom Bot JID (for Team Chat)
# Get from: Zoom Marketplace > Your App > Feature > Team Chat
# ZOOM_BOT_JID=your_bot_jid

# Zoom Secret Token (for webhook signature verification)
# Get from: Zoom Marketplace > Your App > Feature > Event Subscriptions
# ZOOM_SECRET_TOKEN=your_secret_token

# Public Webhook URL (for reference)
# ZOOM_WEBHOOK_URL=https://your-domain.com/webhooks/zoom

# =============================================================================
# OPTIONAL SETTINGS - CX AGENT STUDIO
# =============================================================================

# CX Agent Studio Deployment ID (optional)
# CES_DEPLOYMENT_ID=your_deployment_id

# Path to Google Cloud service account key file
# Required for production deployments
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Use bidirectional streaming (BidiRunSession) instead of runSession
# Default: false
# USE_BIDI_SESSION=false

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server port for webhook endpoint
# Default: 3000
# PORT=3000

# Health check endpoint port (if different from main port)
# Default: 8080
# HEALTH_CHECK_PORT=8080

# Logging level (debug, info, warn, error)
# Default: info
# LOG_LEVEL=info
